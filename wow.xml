<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
    <name>System - WoW</name>
    <author>Branko Wilhelm</author>
    <creationDate>Dez 2013</creationDate>
    <copyright>Copyright (C) 2013 Branko Wilhelm. All rights reserved.</copyright>
    <license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
    <authorEmail>branko.wilhelm@gmail.com</authorEmail>
    <authorUrl>www.z-index.net</authorUrl>
    <version>@REVISION@</version>
    <description>Auto Setup for all WoW Extensions from z-index.net</description>
    <files>
        <filename plugin="wow">wow.php</filename>
    </files>
    <updateservers>
        <server type="collection" priority="1" name="z-index development">http://www.z-index.net/en/extensions.xml</server>
    </updateservers>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="guild" type="text" default="" size="30" required="true" label="Guild" />
                <field name="realm" type="text" default="" size="30" required="true" label="Realm" />
                <field name="region" type="list" default="" required="true" label="Region">
                    <option value="">JSELECT</option>
                    <option value="us">USA</option>
                    <option value="eu">Europe</option>
                    <option value="kr">Korea</option>
                    <option value="tw">Taiwan</option>
                    <option value="sea">Southeast Asia</option>
                </field>
                <field name="lang" type="list" default="" required="true" label="JFIELD_LANGUAGE_LABEL">
                    <option value="">JSELECT</option>
                    <option value="en">English</option>
                    <option value="de">German</option>
                    <option value="fr">Français</option>
                    <option value="es">Español</option>
                    <option value="it">Italiano</option>
                    <option value="pt">Português</option>
                    <option value="ru">Русский</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>